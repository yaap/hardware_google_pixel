package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "pixelatoms_proto",
    srcs: [
        "pixelatoms.proto",
        ":libstats_shared_enum_protos",
        ":libstats_atom_options_protos",
        ":libprotobuf-internal-descriptor-proto",
    ],
}

cc_library {
    name: "pixelatoms-cpp",
    vendor: true,
    proto: {
        type: "lite",
        export_proto_headers: true,
        include_dirs: [
            "external/protobuf/src",
            "frameworks/proto_logging/stats",
        ],
    },
    srcs: [
        "pixelatoms.proto",
        ":libstats_shared_enum_protos",
        ":libstats_atom_options_protos",
        ":libprotobuf-internal-descriptor-proto",
    ],
}

java_library {
    name: "pixelatoms-java",
    vendor: true,
    proto: {
        type: "lite",
        include_dirs: [
            "external/protobuf/src",
            "frameworks/proto_logging/stats",
        ],
    },
    srcs: [
        "pixelatoms.proto",
        ":libstats_shared_enum_protos",
        ":libstats_atom_options_protos",
        ":libprotobuf-internal-descriptor-proto",
    ],
    sdk_version: "current",
}

java_library_host {
    name: "pixelatoms-java_host",
    proto: {
        type: "full",
        include_dirs: [
            "external/protobuf/src",
            "frameworks/proto_logging/stats",
        ],
    },
    srcs: [
        "pixelatoms.proto",
        ":libstats_shared_enum_protos",
        ":libstats_atom_options_protos",
    ],
}

genrule {
    name: "pixelatoms_defs.h",
    tools: ["stats-log-api-gen"],
    cmd: "$(location stats-log-api-gen) --header $(out)" +
        " --namespace hardware,google,pixel,PixelAtoms" +
        " --vendor-proto hardware/google/pixel/pixelstats/pixelatoms.proto",
    out: [
        "pixelatoms_defs.h",
    ],
    srcs: [
        ":pixelatoms_proto",
    ],
}

cc_library {
    name: "libpixelatoms_defs",
    vendor: true,
    generated_headers: ["pixelatoms_defs.h"],
    export_generated_headers: ["pixelatoms_defs.h"],
}

genrule {
    name: "pixelstatsatoms.h",
    tools: ["stats-log-api-gen"],
    cmd: "$(location stats-log-api-gen) --header $(out)" +
        " --module pixelstats" +
        " --namespace android,hardware,google,pixel,PixelAtoms" +
        " --vendor-proto hardware/google/pixel/pixelstats/pixelatoms.proto",
    out: [
        "pixelstatsatoms.h",
    ],
    srcs: [
        ":pixelatoms_proto",
    ],
}

genrule {
    name: "pixelstatsatoms.cpp",
    tools: ["stats-log-api-gen"],
    cmd: "$(location stats-log-api-gen) --cpp $(out)" +
        " --module pixelstats" +
        " --importHeader pixelstatsatoms.h" +
        " --namespace android,hardware,google,pixel,PixelAtoms" +
        " --vendor-proto hardware/google/pixel/pixelstats/pixelatoms.proto",
    out: [
        "pixelstatsatoms.cpp",
    ],
    srcs: [
        ":pixelatoms_proto",
    ],
}

cc_library_static {
    name: "libpixelstatsatoms",
    vendor: true,
    generated_sources: ["pixelstatsatoms.cpp"],
    generated_headers: ["pixelstatsatoms.h"],
    export_generated_headers: ["pixelstatsatoms.h"],
    shared_libs: [
        "android.frameworks.stats-V2-ndk",
    ],
}

cc_library {
    name: "libpixelstats",
    vendor: true,
    export_include_dirs: ["include"],

    tidy_disabled_srcs: [
        "MmMetricsReporter.cpp", // b/215238264
    ],
    srcs: [
        "BatteryCapacityReporter.cpp",
        "BatteryEEPROMReporter.cpp",
        "BatteryHealthReporter.cpp",
        "BatteryFGReporter.cpp",
        "BatteryTTFReporter.cpp",
        "BrownoutDetectedReporter.cpp",
        "ChargeStatsReporter.cpp",
        "DisplayStatsReporter.cpp",
        "DropDetect.cpp",
        "MmMetricsReporter.cpp",
        "MitigationStatsReporter.cpp",
        "MitigationDurationReporter.cpp",
        "PcaChargeStats.cpp",
        "StatsHelper.cpp",
        "SysfsCollector.cpp",
        "ThermalStatsReporter.cpp",
        "TempResidencyReporter.cpp",
        "UeventListener.cpp",
        "WirelessChargeStats.cpp",
    ],
    cflags: [
        "-Wall",
        "-Werror",
    ],
    shared_libs: [
        "android.frameworks.stats-V2-ndk",
        "libbase",
        "libbinder_ndk",
        "libcutils",
        "libhidlbase",
        "liblog",
        "libprotobuf-cpp-lite",
        "libutils",
        "libsensorndkbridge",
        "pixelatoms-cpp",
    ],
    export_shared_lib_headers: [
        "android.frameworks.stats-V2-ndk",
        "pixelatoms-cpp",
    ],
    static_libs: [
        "chre_client",
        "libpixelstatsatoms",
    ],
    header_libs: ["chre_api"],
}
